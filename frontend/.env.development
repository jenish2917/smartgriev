# SmartGriev Frontend Environment Configuration

# Backend API Configuration
VITE_API_BASE_URL=http://127.0.0.1:8000/api/complaints/api
VITE_BACKEND_HOST=127.0.0.1
VITE_BACKEND_PORT=8000

# Application Configuration
VITE_APP_NAME=SmartGriev
VITE_APP_VERSION=2.0.0
VITE_APP_DESCRIPTION=AI-Powered Multi-Modal Complaint Processing System

# Feature Flags
VITE_ENABLE_AUDIO_RECORDING=true
VITE_ENABLE_IMAGE_UPLOAD=true
VITE_ENABLE_AI_ENHANCEMENT=true
VITE_ENABLE_OTP_AUTH=true
VITE_ENABLE_GOOGLE_AUTH=false

# File Upload Limits
VITE_MAX_FILE_SIZE_MB=10
VITE_ALLOWED_AUDIO_FORMATS=wav,mp3,m4a,webm
VITE_ALLOWED_IMAGE_FORMATS=jpeg,jpg,png,webp

# API Timeouts (milliseconds)
VITE_API_TIMEOUT=30000
VITE_UPLOAD_TIMEOUT=60000

# Development Configuration
VITE_DEBUG_MODE=true
VITE_ENABLE_LOGGING=true

# External Services (when available)
# VITE_GROQ_API_KEY=your_groq_api_key_here
# VITE_GOOGLE_CLIENT_ID=your_google_client_id
# VITE_TWILIO_ACCOUNT_SID=your_twilio_sid